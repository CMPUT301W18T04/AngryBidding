<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_fragment_app_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true">

    <android.support.v7.widget.Toolbar
        android:id="@+id/search_fragment_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:theme="@style/AppTheme.WhiteControlActionBar">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/search_fragment_toolbar_search"
            android:hint="@string/searchKeywords"
            android:textColorHint="@color/colorContentBackground"
            android:textColor="@color/colorContentBackground"
            android:textColorLink="@color/colorContentBackground"
            android:layout_marginEnd="40dp"
            android:textSize="18sp"
            android:maxLines="1"
            android:inputType="text"
            android:maxLength="100"
            android:imeOptions="actionSearch"/>
    </android.support.v7.widget.Toolbar>

</android.support.design.widget.AppBarLayout>